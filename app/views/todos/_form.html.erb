<%= render 'shared/errors' %>
    <%= form_for @todo do |f| %>
        <div class="input-field col s6">
            
            <%= f.text_field :name, :placeholder => 'Name', :length => '15' %>
        </div>
        <div class="input-field">
            <%= f.text_area :description, :placeholder => 'Description', :length => '200', :class => 'materialize-textarea' %>
        </div>
        
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
          <a href="<%= todos_path %>" class="btn waves-effect waves-light" name="action">Todos Listing</a>
      
    <% end %>

