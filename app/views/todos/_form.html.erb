<% if @todo.errors.any? %>

    <h2>The following errors prevented the todo from saving</h2>
    <ul>
        <%@todo.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
        <% end %>
    </ul>
<% end %>
    <%= form_for @todo do |f| %>
        <div class="input-field col s6">
            <%= f.label :name %> <br>
            <%= f.text_field :name %>
        </div>
        <div class="input-field col s6">
            <%= f.label :description %> <br>
            <%= f.text_area :description %>
        </div>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
<%= link_to "Back to Todos Listing", todos_path %>
